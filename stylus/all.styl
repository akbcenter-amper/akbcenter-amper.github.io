// bower:css
@import "../bower_components/normalize.css/normalize.css"
@import "../bower_components/slick.js/slick/slick.css"
// endbower
@import "../bower_components/fancybox/source/jquery.fancybox.css"
@import "../js/vendor/fotorama-4.6.3/fotorama.css"
@import 'core/*'
@import 'components/*'

.separator
  display inline-block
  position relative
  border-radius 50%
  opacity 0.7
  &_red
    width 8px
    height 8px
    &, &:before
      background #df493d
    &:before
      height 19px
      top -4px
  &_white
    width 10px
    height 10px
    top -5px
    &, &:before
      background #fff
    &:before
      height 77.8px
      top -33px
  &_black
    width 10px
    height 10px
    position absolute
    right 38.9%
    top 50%
    margin-top -8.5px
    &, &:before
      background #000
    &:before
      height 75px
      top -31px
  &:before
    content ''
    position absolute
    width 1px
    left 50%
    margin-left: -1px
    transform rotate(45deg) translateX(-50%)

.logo
  display block
  float left
  width 25%
  &__img
    width 144px
    height 59px
  &-text
    display inline-block
    vertical-align top
    margin 1.3rem 0 0 1.4rem
    &__i
      font 1.6rem latolight
      color #000

.nav
  display inline-block
  vertical-align: top
  &-wr
    float left
    width 50%
    margin 2rem 0 0
    text-align center
  &__item,
  &__link
    display inline-block
  &__item
    margin 0 2rem
  &__link
    color #000
    font  1.6rem latoregular

.contact-nav
  float right
  width 25%
  margin-top 2.2rem
  text-align: right
  &__item,
  &__link
    display inline-block
  &__item
    margin 0 1.5rem
  &__link
    color #000
    font 1.4rem latoregular
    padding 0 0 0 2.5rem
    position relative
    &:before
      content ''
      display inline-block
      background-size cover
      position absolute
      opacity: 0.7
    &_skype
      &:before
        width 22px
        height 21px
        background-image url(../img/r-icon-skype.png)
        top -1px
        left -5px
    &_phone
      &:before
        width 17px
        height 17px
        background-image url(../img/r-icon-phone.png)
        top 0
        left 0

.content
  background url(../img/bg.png) repeat
  &__i
    @extend $container

.main-slider
  border 3px solid $red
  margin 0 0 4.5rem
  &__item
    position relative
  &__icon
    width 54px
    height 61px
    position absolute
    background-image url(../img/r-icon-question.png)
    background-size cover
    bottom 30px
    right (123/1200*100%)
    cursor pointer
  &-info
    display table
    position absolute
    left 30px
    bottom 30px
    width (980/1200*100%)
    &__title,
    &__description
      display table-cell
      vertical-align middle
    &__title
      font 4.4rem latolight
      color #fff
      padding 0 3.6rem
      position: relative
      z-index: 10
      &:before {
        content: ''
        position: absolute
        left: 0
        right: 0
        top: 0
        bottom: 0
        background #666
        filter: blur(5px);
        backface-visibility hidden
        opacity: 0.5
        z-index: -1
      }


    &__description
      font 1.6rem/1.5 latoregular
      color #262626
      padding 3.7rem 2.8rem 3.7rem 5rem
      background #fff
      width (386/980*100%)
      z-index: 11
  &-tip
    transform scale(0.7)
    opacity 0
    transition all 500ms
    &._active {
      opacity 1
      transform scale(1)
    }


.brand
  text-align center
  padding 3.5rem 0 7rem
  &-wr
    background #fff
    border 3px solid $red
    border-bottom 0
  &__row
    &_middle
      margin 4.3rem 0 11.6rem
  &__item
    width 338px
    height 168px
    display inline-block
    position relative
    transition all 400ms
    &._active
      box-shadow 0 16px 28px 0 rgba(0, 0, 0, 0.22), 0 25px 55px 0 rgba(0, 0, 0, 0.21)
      &:before,
      &:after
        left 0
        right 0
        top 0
        bottom 0
      .brand__item-active-state
        display: block
    &_middle
      margin 0 6.3rem
      position relative
      top 4.9rem
    &_offset
      margin 0 4.6rem
    &:hover
      box-shadow 0 16px 28px 0 rgba(0, 0, 0, 0.22), 0 25px 55px 0 rgba(0, 0, 0, 0.21)
    &:hover:before,
    &:hover:after
      left 0
      right 0
      top 0
      bottom 0
    &:before,
    &:after
      content ''
      position absolute
      transition all 400ms
    &:before
      border-left 1px solid #e5e5e5
      border-right 1px solid #e5e5e5
      top 22px
      bottom 22px
      left 0
      right 0
    &:after
      border-top 1px solid #e5e5e5
      border-bottom 1px solid #e5e5e5
      top 0
      bottom 0
      left 17px
      right 17px
    &-active-state
      position: absolute
      width: 100%
      height: 100%
      left: 0
      right: 0
      top: 0
      bottom: 0
      display: none
      &:before
        content ''
        display: block
        background: #e56055
        height: 30px
        position: absolute
        top: 100%
        left: 0
        right: 30px
        transform: skewX(-40deg)
  &__img
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    &_bosch
      width 248px
      height 55px
    &_deka
      width 223px
      height 63px
    &_inci
      width 216px
      height 74px
    &_varta
      width 258px
      height 52px



.title
  text-align center
  margin 2rem 0
  &__i
    font bold 2.6rem latolight
    /*text-transform uppercase*/
    letter-spacing 0.5px
    display inline-block
    &:before,
    &:after
      content ''
      display inline-block
      width 22px
      height 21px
      background-size cover
      opacity 0.5
    &:before
      margin-right 3rem
    &:after
      margin-left 3rem
    &_red
      color #df493d
      &:before
        background-image url(../img/r-icon-minus.png)
      &:after
        background-image url(../img/r-icon-plus.png)
    &_white
      color #fff
      &:before
        background-image url(../img/r-icon-minus_white.png)
      &:after
        background-image url(../img/r-icon-plus_white.png)

.contacts
  background #e56055
  text-align center
  padding 3.2rem 0 3.3rem
  opacity 0.9
  &-nav
    margin 6.8rem 0 6.3rem
    padding-right: 4rem
    text-align: center
    &__item,
    &__link
      display inline-block
    &__item
      margin 0 3rem
    &__link
      font  2.4rem latoregular
      letter-spacing 1px
      color #fff
      position relative
      &_phone,
      &_skype
        padding 0 0 0 2.5rem
        &:before
          content ''
          position absolute
          width 22px
          height 21px
          background-size cover
      &_phone:before
        background-image url(../img/r-icon-phone_white.png)
        left -8px
        top: 4px
      &_skype:before
        background-image url(../img/r-icon-skype_white.png)
        left: -5px;
        top: 8px;
      &_email
        padding 0 2.5rem 0 0
        &:after
          content ''
          position absolute
          width 26px
          height 20px
          background-size cover
          background-image url(../img/r-icon-mail.png)
          top: 7px;
          right: -8px;
  &-address
    &__title
      font 2.2rem/1.8 latolight
      color #fff
    &__text
      font 1.8rem/1.8 latoregular
      color #fff

.find
  padding 4.5rem 0 0.2rem
  background #fff
  &-container
    @extend $cf
    padding 2rem (30/1200*100%)
    &__item
      float left
      width (555/1140*100%)
      &+&
        margin-left (30/1140*100%)

.about
  padding-top: 3rem
  padding-bottom: 3rem
  &__text
    max-width: 60%
    margin: 1rem auto
    font 1.8rem latoregular
    line-height: 1.8
    opacity: 0.6
.brand-table-w
  margin: 0
  padding: 0
  width 100%
  background #f5f5f5
  position: relative
  opacity 0
  max-height: 0
  overflow hidden
  transition: max-height 0, opacity 0.2s ease
  &._active
    opacity 1
    max-height: 5000px
    margin-top: 2.8rem
    border-top: 1px solid #e56055
    border-bottom: 1px solid #e56055
    padding: 2rem 3rem
    transition: max-height 0.4s ease, opacity 0.35s ease

.brand-table
  padding: 0
  width: 100%
  &__close
    font: 5rem/0.5 Arial;
    cursor: pointer;
    text-decoration: none;
    color: #e05145;
    position: absolute;
    right: 3rem
    top: 3rem
    transition: all 0.3s ease-out 0s;
    &:hover
      color: #cccccc
  &__header
    font 1.4rem latoregular
    text-transform: uppercase
    color: #7a7a7a
    td
      padding: 1rem 0
      &:last-child
        min-width: 210px
  &__body
    color: #494949
    font 1.4rem latoregular
    td
      padding: 1rem 0
    img
      max-width: 150px
      opacity 0.8
  &__submit
    font 1.8rem latoregular
    display: inline-block
    position: relative
    padding: 1rem 3.5rem 1.2rem 3rem
    z-index: 10
    line-height: 1
    color: #fff
    transition: all 0.4s ease-out
    cursor: pointer
    text-decoration: none
    &:hover
      color: $red
      transition: none
      &:before
        background: #fff
    &:before
      content ''
      display: block
      background: #e56055
      width: 100%
      height: 100%
      position: absolute
      left: 0
      right: 0
      top: 0
      bottom: 0
      z-index: -1
      transform: skewX(-40deg)
      border 1px solid $red


